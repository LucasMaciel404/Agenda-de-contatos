<%- include('includes/head'); %>
  <%- include('includes/nav'); %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>



        <div class="col-lg-8 my-5">

          <h1 class="text-center">Criar conta ou Entrar</h1>
          <p class="text-center lead">Faça login ou se cadastre</p>

          <%- include('includes/masseges'); %>




            <div class="row">
              <div class="col-lg">
                <h4>Cadastrar-se</h4>
                <p>Faça sua conta preenchendo o formulario abaixo: </p>
                <form action="/login/register" method="POST">
                  <input type="hidden" name="_csrf" value=<%= csrfToken %> />

                  <div class="form-group">
                    <label for="exampleInputEmail1">Seu Email</label>
                    <input type="email" class="form-control" name="email">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Sua senha</label>
                    <input type="password" class="form-control" name="password">
                  </div>
                  <button type="submit" class="btn btn-primary">Criar minha conta</button>
                </form>
              </div>









            <div class="col-lg">
              <h4>Logar</h4>
              <p>Faça seu login preenchendo o formulario abaixo: </p>
              <form action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %> />

                <div class="form-group">
                  <label for="exampleInputEmail1">Seu Email</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
            </div>
          </div>










        </div>



        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer'); %>